{
  "manifest_version":2,
  "name":"keyword extension",
  "version":"1.0",
  "description":"A keyword extension",
  "options_page": "options.html",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "icons":{
    "128":"img/icon128.png",
    "48":"img/icon48.png",
    "16":"img/icon16.png"
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    }
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  }
}