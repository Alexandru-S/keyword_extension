{
  "manifest_version":2,
  "name":"keyword extension",
  "version":"1.0",
  "description":"A keyword extension",
  "options_page": "options.html",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "permissions": ["activeTab", "declarativeContent", "storage","tabs", "http://*/*", "https://*/*"],
  "icons":{
    "128":"img/icon128.png",
    "48":"img/icon48.png",
    "16":"img/icon16.png"
  },
  "browser_action": {
    "default_icon": "img/icon16.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [ {
    "all_frames": true,
    "css": [ "css/highlight.css" ],
    "js": [ "js/highlight.js" ],
    "run_at": "document_idle",
    "matches": [ "http://*/*", "https://*/*", "file://*/*" ]
  } ]
}